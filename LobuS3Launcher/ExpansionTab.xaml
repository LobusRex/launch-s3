<UserControl
	x:Class="LobuS3Launcher.Tabs.ExpansionTab"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:LobuS3Launcher.Tabs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<ScrollViewer>
		<StackPanel>

			<GroupBox x:Name="EPBox" Header="Expansion Packs">
				<StackPanel>

					<TextBlock TextWrapping="Wrap">Select expansion packs.</TextBlock>

					<StackPanel x:Name="EPPanel" />

				</StackPanel>
			</GroupBox>

			<GroupBox x:Name="SPBox" Header="Stuff Packs">
				<StackPanel>

					<TextBlock TextWrapping="Wrap">Select stuff packs.</TextBlock>

					<StackPanel x:Name="SPPanel" />

				</StackPanel>
			</GroupBox>

			<GroupBox Header="Expansion Selection">
				<TextBlock TextWrapping="Wrap">
					<Hyperlink Click="Hyperlink_Click">
						Manage expansion pack selection
					</Hyperlink>
				</TextBlock>
			</GroupBox>

		</StackPanel>
	</ScrollViewer>
</UserControl>

<UserControl
	x:Class="LobuS3Launcher.Tabs.ExpansionControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:LobuS3Launcher.Tabs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<StackPanel Orientation="Horizontal">

		<ComboBox
			x:Name="comboBox"
			Width="100"
			Margin="0,0,10,0">
			<ComboBoxItem x:Name="discCombo">Disc</ComboBoxItem>
			<ComboBoxItem x:Name="steamCombo">Steam</ComboBoxItem>
		</ComboBox>

		<CheckBox
			x:Name="checkBox"
			Content="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
			IsEnabled="True" />

	</StackPanel>
</UserControl>
